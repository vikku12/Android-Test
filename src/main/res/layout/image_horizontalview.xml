<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/tab3"
    android:paddingTop="20dp"
    android:background="#00ffffff"
    android:descendantFocusability="blocksDescendants">
<TextView
    android:layout_width="311dp"
    android:layout_height="15dp"
    android:id="@+id/title_view"
    android:text="Title"
    android:textSize="10dp"
    android:textStyle="bold"
    android:focusable="false"
    android:layout_marginLeft="20dp" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:padding="10dp"
        android:background="#00ffffff"
        android:id="@+id/hor_logic">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#00000000"
            android:backgroundTintMode="screen"
            android:backgroundTint="#00050505">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/image1"
                android:src="@drawable/bh4"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:baselineAlignBottom="false"
                android:clickable="true"
                android:onClick="onLogic1"
                android:nestedScrollingEnabled="true" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/image2"
                android:src="@drawable/f1"
                android:paddingRight="5dp"
                android:onClick="onLogic2" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/image3"
                android:src="@drawable/cb2"
                android:paddingRight="5dp"
                android:onClick="onLogic3" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/image4"
                android:src="@drawable/dh1"
                android:paddingRight="5dp"
                android:onClick="onLogic4" />

        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>
